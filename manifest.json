{
  "manifest_version": 3,
  "name": "Judol Detector",
  "version": "2.1",
  "description": "Deteksi komentar promosi judi online di YouTube dan beri peringatan.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "config.js",
        "detector.js",
        "ui.js",
        "main.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ]
}